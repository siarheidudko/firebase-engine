{
  "compilerOptions": {
    "module": "CommonJS",
    "allowJs": false,
    "skipLibCheck": false,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "outDir": "lib",
    "sourceMap": true,
    "strict": true,
    "target": "ES2018",
    "lib": ["ES2018", "ES2019", "ES2020", "ES2021"],
    "resolveJsonModule": true,
    "isolatedModules": false,
    "noEmit": false,
    "forceConsistentCasingInFileNames": true,
    "baseUrl": "src"
  },
  "compileOnSave": true,
  "include": ["src"],
  "typedocOptions": {
    "out": "./docs/",
    "theme": "default",
    "name": "Firebase Engine",
    "includeVersion": true,
    "hideGenerator": true,
    "gaID": "234199319",
    "gaSite": "https://siarheidudko.github.io/firebase-engine"
  }
}
